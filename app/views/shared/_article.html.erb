<div class="article" id="article_<%= article.id %>">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="article-header">
        <h2 class="hidden-sm hidden-xs"><%= article.title %></h2>
        <h4 class="visible-sm visible-xs"><%= article.title %></h4>
        <span class="published-on">Publi√© le <%= l(article.created_at, format: "%e %b %Y") %></span>
        <hr>
      </div>
      <div class="article-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'redoine.jpg' %>);"></div>
      <div class="article-content">
        <%= render_markdown(article.content) %>
      </div>
    </div>
  </div>
</div>